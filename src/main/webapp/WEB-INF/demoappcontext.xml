<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<context:component-scan base-package="hu.miskolc.uni.iit.dist" />
	<context:annotation-config></context:annotation-config>
	<mvc:annotation-driven></mvc:annotation-driven>
	<!-- <mvc:resources mapping="/resources/**" location="/resources/" /> -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<bean id="userDao" class="hu.miskolc.uni.iit.dist.dao.UserDaoImpl"></bean>

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="hu.miskolc.uni.iit.dist.domain.Gender" value="hu.miskolc.uni.iit.dist.domain.converter.GenderEnumConverter" />
				<entry key="hu.miskolc.uni.iit.dist.domain.Qualification" value="hu.miskolc.uni.iit.dist.domain.converter.QualificationEnumConverter"/>
			</map>
		</property>
	</bean>
</beans>